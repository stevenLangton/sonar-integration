@using JsPlc.Ssc.Link.Models
@{
    var viewType = TempData["ViewType"];
    // This view still used for Link conversations (i.e My conversations.)
    // This view is NOT used for Team view, refer to Team/YourTeam
}
<div id="linkpage" style="display: none;" data-bind="visible: true">
    <div id="msgs"></div>
    <div>@Html.MvcSiteMap().SiteMapPath()</div>
    <!-- ko foreach: $root.dataModel() -->
    <div class="row">
        <div class="col-md-8">
            <h1>Link conversations</h1>
        </div>
        <div class="col-md-4" style="text-align: right;">
            
                <a data-bind="attr: {'href': CreateLink}" class="btn btn-lg btn-primary">Create Link conversation</a>
          
            </div>
        </div>
    </div>
    <p>
        You've had
        <strong>
            <span data-bind="text: (MeetingsInLast12Months == 0) ? 'no conversations ' :
                                    (MeetingsInLast12Months == 1) ? '1 conversation ' :
                                    (MeetingsInLast12Months + ' conversations ')"></span>
        </strong>
        with your line manager in the last 12 months.
    </p>

    <!-- ko if: (LastMeeting && LastMeeting.MeetingDate) -->
    Last conversation: <strong><span data-bind="text: $root.formatDateMonthDYHM(LastMeeting.MeetingDate)"></span></strong>
    <!-- /ko -->
       
        <!-- Latest conversation if any -->
        <!-- ko if: (LatestMeeting) -->
        <div data-bind="template: { name: 'current-meeting-template', data: LatestMeeting }"></div>
        <!-- /ko -->
        <!-- ko if: (!LatestMeeting) -->
        <div data-bind="template: { name: 'nocurrent-meeting-template', data: LatestMeeting }"></div>
        <!-- /ko -->
            <div>
            <h2>Past Link conversations</h2>
        </div>
        <!-- ko if: (!PastMeetings) || (PastMeetings.length == 0) -->
        <div data-bind="template: { name: 'nopast-meeting-template', data: PastMeetings}"></div>
        <!-- /ko -->
        <!-- ko foreach: PastMeetings -->
        <div data-bind="template: { name: 'past-meeting-template', data: $data }"></div>
        <!-- /ko -->
            @*<div class="linkBox1">
                <span style="color: red">TODO Continue creating past conversation views here..</span>
            </div>*@


    <!-- /ko --><!-- end of root.datamodel -->




<script type="text/html" id="nocurrent-meeting-template">
    <!-- note: dataType = LinkMeetingView -->
   
        <div class="linkBox2">
        <p>You have no upcoming conversations. Click Create Link conversation button to arrange one.</p>
    </div>
  
</script>
<script type="text/html" id="current-meeting-template">
    <!-- note: dataType = LinkMeetingView -->
          
                <div class="linkBox1">
            <p><span>Current Link conversation</span></p>
        </div>
                <div class="row linkBox1">
            <div class="col-md-1">
                        <img src="/Content/Images/calendar_icon.png" />
            </div>
            <div id="u98" class="col-md-10">
                <p style="font-size:20px;">
                    <span style="font-family:'Arial Bold', 'Arial';font-weight:700;font-size:20px;" data-bind="text: $root.formatDateMonthDYHM(MeetingDate) "></span>
                </p>
                <p style="font-size:13px;">
                    <span style="font-family:'Arial';font-weight:400;font-size:13px;">
                        <!-- ko if: (ColleagueSignOff == 1) -->
                        @*You have submitted this conversation for signoff.*@
                        <!-- ko if: (ManagerSignOff == 0) -->
                        You submitted this conversation on <span data-bind="text: $root.formatDateMonthDYHM(ColleagueSignedOffDate) "></span>
                        <br />
                        <span data-bind="text: $parent.ManagerFirstName"></span> has not yet accepted your record for this Link conversation.
                        <!-- /ko -->
                        <!-- ko if: (ManagerSignOff == 1) -->
                        <span data-bind="text: $parent.ManagerFirstName"></span> accepted your record for this Link conversation on
                        <span data-bind="text: $root.formatDateMonthDYHM(ManagerSignedOffDate) "></span>
                        <!-- /ko -->
                        <!-- /ko -->
                        <!-- ko if: (ColleagueSignOff ==0) -->
                        This conversation is not complete yet. Once you complete it, please submit it for signoff by
                        <span data-bind="text: $parent.ManagerFirstName"></span>
                        <!-- /ko -->
                    </span>
                </p>
                <p>
                    <a data-bind="attr: {'href': $root.getEditOrViewLink($data)}"
                       class="btn btn-sm" style="background-color: whitesmoke; text-decoration: none; border: solid 1px grey">View Link conversation</a>
                </p>
            </div>
        </div>
    </div>
</script>
<script type="text/html" id="nopast-meeting-template">
    <!-- note: dataType = LinkMeetingView -->
            <div class="linkBox2">
        <p>You have no past conversations.</p>
    </div>
</script>
<script type="text/html" id="past-meeting-template">


    <!-- note: dataType = LinkMeetingView -->

    <div class="col-md-12 linkBox1">
            <div class="col-md-1">
                <i class="fa fa-check-circle fa-3x" data-bind="visible: (Status==1)"></i>
                <i class="fa fa-times-circle fa-3x" data-bind="visible: (Status==0)"></i>
            </div>
            <div id="u98" class="col-md-10">
                
                <h3 data-bind="text: $root.formatDateMonthDYHM(MeetingDate) "></h3>
                
                <p>
                    <span>
                        <!-- ko if: (ColleagueSignOff == 1) -->
                        @*You have submitted this conversation for signoff.*@
                        <!-- ko if: (ManagerSignOff == 0) -->
                        You submitted this conversation on <span data-bind="text: $root.formatDateMonthDYHM(ColleagueSignedOffDate) "></span>
                        <br />
                        <span data-bind="text: $root.getColleagueFirstName(ManagerAtTime)"></span> has not yet accepted your record for this Link conversation.
                        <!-- /ko -->
                        <!-- ko if: (ManagerSignOff == 1) -->
                        <span data-bind="text: $root.getColleagueFirstName(ManagerAtTime)"></span> accepted your record for this Link conversation on
                        <span data-bind="text: $root.formatDateMonthDYHM(ManagerSignedOffDate) "></span>
                        <!-- /ko -->
                        <!-- /ko -->
                        <!-- ko if: (ColleagueSignOff ==0) -->
                        This conversation is not complete yet. Once you complete it, please submit it for signoff by
                        <span data-bind="text: $root.getColleagueFirstName(ManagerAtTime)"></span>
                        <!-- /ko -->
                    </span>
                </p>
                <p>
                   

                    <a data-bind="attr: {'href': $root.getEditOrViewLink($data)}"
                   class="btn btn-sm btn-primary">View conversation record</a>
                </p>
            </div>
        </div>


</script>

<script type="text/javascript">
    require(["LinkMeetings", "RegisterKoComponents"], function (lm) {
        $(document).ready(function () {
            lm.init("@viewType");
        });
    });
</script>
