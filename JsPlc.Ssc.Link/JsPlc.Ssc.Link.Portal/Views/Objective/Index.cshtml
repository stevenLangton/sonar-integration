
<div id="ObjectivesListView" style="display:none" data-bind="visible:true">
	<div>@Html.MvcSiteMap().SiteMapPath()</div>


	<div class="row">
		<div class="col-md-2">
			<img src="~/Content/Images/Objectives wheel unlabelled.png" width="106" height="101" style="margin-top:30px;">
		</div>

		<div class="col-md-6">
			<h1>Objectives</h1>
			<hr />
			<p>Each of your objectives should be SMART: Specific, Measurable, Achievable, Time bound and Relevant</p>
			<hr />
		</div>

		<div class="col-md-4">
			<div class="pull-right">
				<br />
				<a class="btn btn-primary btn-block" data-toggle="collapse" data-target="#demo" data-bind="click: enterNewObjective" aria-expanded="false">Add objective</a>
			</div>

		</div>
	</div>

	<div class="container-fluid">
		<div class="row">

		</div>
		<div class="">
			<div id="demo" class="collapse">
				<div data-bind="stopBinding: true">
					<div id="objectiveContainer"></div>
				</div>
			</div>
		</div>
	</div>
	<br />
	<br />
	<objectives-list params='data: objectives, readOnly: false'></objectives-list>
	<hr />
</div>
<script type="text/javascript">
	require(["Objectives", "autogrow", "RegisterKoComponents"], function (mod, autogrow) {
		$(document).ready(function () {
			mod.init("ObjectivesListView", "@ViewBag.ColleagueId");
			$('textarea').autogrow({ onInitialize: true });

		});
	});
</script>