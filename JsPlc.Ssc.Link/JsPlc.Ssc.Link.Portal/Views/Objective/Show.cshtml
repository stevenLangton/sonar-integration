@model JsPlc.Ssc.Link.Models.Entities.LinkObjective
@{
    bool ReadOnly = ViewBag.ReadOnly??false;
}
<script type="text/javascript">
    require(["SingleObjective"], function (mod) {
        $(document).ready(function () {
            mod.init(@Html.Raw(Json.Encode(Model)));
        });
    });
</script>
<div id="ObjectiveView">
   
    <div>@Html.MvcSiteMap().SiteMapPath()</div>
    <h1>@ViewBag.Title</h1>
  
    <span data-bind="text: 'Created on ' + displayCreateDate"></span>
    <h4 for="objectiveTitle" >Objective title</h4>
    <div>
        <textarea id="objectiveTitle" data-bind="textInput: Title" disabled="@ReadOnly"></textarea>
    </div>
    <h4>What will I do to make a difference this year?</h4>
    <div>
        <textarea data-bind="textInput: Objective" disabled="@ReadOnly"></textarea>
    </div>
    <h4>How will I know I’ve made a difference (e.g. by improving quality/increasing sales/saving time/reducing cost)?</h4>
    <div>
        <textarea data-bind="textInput: MeasuredBy" disabled="@ReadOnly"></textarea>
    </div>
    <h4>Which company or divisional priority does this support?</h4>
    <div>
        <textarea data-bind="textInput: RelevantTo" disabled="@ReadOnly"></textarea>
    </div>
    <br />
    <br />
    <br />
    <div class="container-fluid">
        <div class="pull-right">
            <span>Updated on </span><span data-bind="text: displayUpdateDate"></span>
            <button class="btn btn-primary" data-bind="click: update" disabled="@ReadOnly">Save</button>
            <button class="btn btn-primary" data-bind="click: cancel">Cancel</button>
        </div>
    </div>
    <hr />
</div>
@Html.Partial("_ConfirmModal")
