@using JsPlc.Ssc.Link.Models
@{
    // This view is used for Meeting Records as per Link MVP
    // TODO - Build the Html and Bindings to the ko PageViewModel
}
<div id="linkpage" style="display: none;" data-bind="visible: true">
    <div id="msgs"></div>
    <h6>LINE MANAGEMENT</h6>

    <div class="row">
        <div class="col-md-8">
            <h1 style="margin:0; padding:0">Conversation tracker</h1>
        </div>
    </div>

    <div data-bind="visible: $root.dataModel().length == 0">
        <div data-bind="template: { name: 'nopast-meeting-template', data: $root}"></div>
    </div>
    <div data-bind="visible: $root.dataModel().length > 0" style="margin-top: 10px">
        <!-- ko foreach: $root.dataModel() -->
        <div class="row" style="padding-bottom: 2px;">
            <!-- ko if: (!Meeting) || (Meeting.ColleagueId != "") -->
            <div data-bind="template: { name: 'past-meeting-template', data: Meeting }"></div>
            <!-- /ko -->
        </div>
        <!-- /ko --><!-- end of root.datamodel -->
    </div>


</div>
<script type="text/html" id="nopast-meeting-template">
    <!-- note: dataType = LinkMeetingView -->
    <div class="col-md-12" style="border: solid 1px black; width: 700px; margin: 10px 10px">
        <p>No conversation records found.</p>
    </div>
</script>
<script type="text/html" id="past-meeting-template">
    <!-- note: dataType = LinkMeetingView -->
    <div style="margin: 10px 10px;">
        <div class="col-md-12" style="border: solid 1px black; padding-top: 12px; margin-bottom: 10px">
            <div class="col-md-1">
                <img data-bind="visible: (Status==0)" src="/Content/Images/round_black_cross.png" style="width: 40px; height: 40px" />
                <img data-bind="visible: (Status==1)" src="/Content/Images/round_black_tick.png" style="width: 40px; height: 40px" />
            </div>
            <div id="u98" class="col-md-10">
                <p style="font-size:20px;">
                    <span style="font-family:'Arial Bold', 'Arial';font-weight:700;font-size:20px;"
                          data-bind="text: $root.getColleagueName(Colleague) + ' - ' + $root.formatDateMonthDYHM(MeetingDate) "></span>
                </p>
                <p style="font-size:13px;">
                    <span style="font-family:'Arial';font-weight:400;font-size:13px;">
                        <!-- ko if: (ColleagueSignOff == 1) -->
                        @*You have submitted this conversation for signoff.*@
                        <!-- ko if: (ManagerSignOff == 0) -->
                        You submitted this conversation on <span data-bind="text: $root.formatDateMonthDYHM(ColleagueSignedOffDate) "></span>
                        <br />
                        <span data-bind="text: $root.getColleagueFirstName(ManagerAtTime)"></span> has not yet accepted your record for this Link conversation.
                        <!-- /ko -->
                        <!-- ko if: (ManagerSignOff == 1) -->
                        <span data-bind="text: $root.getColleagueFirstName(ManagerAtTime)"></span> accepted your record for this Link conversation on
                        <span data-bind="text: $root.formatDateMonthDYHM(ManagerSignedOffDate) "></span>
                        <!-- /ko -->
                        <!-- /ko -->
                        <!-- ko if: (ColleagueSignOff ==0) -->
                        This conversation is not complete yet. Once you complete it, please submit it for signoff by
                        <span data-bind="text: $root.getColleagueFirstName(ManagerAtTime)"></span>
                        <!-- /ko -->
                    </span>
                </p>
                <p>
                    <a data-bind="attr: {'href': $root.getEditOrViewLink($data)}"
                       class="btn btn-sm" style="background-color: whitesmoke; text-decoration: none; border: solid 1px grey">
                        <span data-bind="text: $root.getColleagueName(Colleague)"></span>
                    </a>
                </p>
            </div>
        </div>
    </div>
</script>
<script type="text/javascript">
    require(["MeetingRecords"], function (lm) {
        $(document).ready(function () {
            lm.init();
        });
    });
</script>
